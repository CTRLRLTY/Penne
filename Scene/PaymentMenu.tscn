[sub_resource type="GDScript" id=2]
script/source = "extends TextureRect

export(NodePath) var ProceedButtonPath : NodePath

onready var proceed_button : Button = get_node(ProceedButtonPath)


func _on_ProceedButton_pressed() -> void:
	var pressed_button = proceed_button.group.get_pressed_button()
	var carry
	if pressed_button.shortcut:
		match pressed_button.shortcut.shortcut.action:
			\"pay_cash\": 
				carry = \"cash\"
			\"pay_card\":
				carry = \"card\"
		SceneChanger.change_scene(Globals.InvoiceMenuScene, \"fade\", carry)
"

